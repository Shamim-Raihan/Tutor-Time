<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondaryBackgroundColorGreen"
    android:padding="50dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_profileImage_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/profile_image_shape"
        android:foreground="?selectableItemBackground"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/header_username_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_profileImage_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Shamim Raihan"
        android:textColor="@color/textColorWhite"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/header_email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shamimraihan91@gmail.com"
        android:layout_below="@id/header_username_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColorWhite"
        android:textSize="14sp"
        />
</RelativeLayout>