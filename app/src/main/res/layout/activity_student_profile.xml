<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.StudentProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondaryBackgroundColorGreen">
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_below="@id/toolbarId"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/secondaryBackgroundColorGreen"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/studentprofile_profileImage_id"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/profile_image_shape"
                    android:foreground="?selectableItemBackground"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    />

                <TextView
                    android:id="@+id/studentprofile_name_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shamim Raihan"
                    android:gravity="center_horizontal"
                    android:textSize="30sp"
                    android:textColor="@color/textColorWhite"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/studentprofile_class_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="@color/textColorWhite"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:background="#B4C9D6"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email         :  "
                        />
                    <TextView
                        android:id="@+id/studentprofile_email_id"
                        android:textSize="18sp"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="shamimraihan91@gmail.com"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone        :  "
                        />
                    <TextView
                        android:id="@+id/studentprofile_phone_id"
                        android:textSize="18sp"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="012791835127"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age             :  "
                        />
                    <TextView
                        android:id="@+id/studentprofile_age_id"
                        android:textSize="18sp"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender       :  "
                        />
                    <TextView
                        android:id="@+id/studentprofile_gender_id"
                        android:textSize="18sp"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        />
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>