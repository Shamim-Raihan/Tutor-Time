<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorGray"
    android:orientation="vertical"
    tools:context=".ui.activity.TeacherRegisterActivity">
    <ScrollView
        android:background="@drawable/layout_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        >
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Registration"
                android:layout_marginBottom="50dp"
                android:textColor="@color/textColorWhite"
                android:textSize="25sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/teacher_name_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Write here..."
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="40dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/teacher_email_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Write here..."
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/teacher_phone_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Write here..."
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Degree (e.g: B.Sc, M.Sc)"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/teacher_degree_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Write here..."
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education Area(e.g: Physics)"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/teacher_education_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Write here..."
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job Institution"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/teacher_job_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Write here..."
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="30dp"
                />

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    />

                <RadioGroup
                    android:id="@+id/teacher_radio_group_id"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/teacher_male_radio_button_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:layout_marginRight="20dp"
                        />
                    <RadioButton
                        android:id="@+id/teacher_female_radio_button_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        />
                </RadioGroup>

            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Picture"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_background_design"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="20dp"
                >

                <TextView
                    android:id="@+id/teacher_photo_tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/teacher_add_photo_img_id"
                    android:gravity="center_vertical"
                    android:text="Add here (click the add button)"
                    android:ellipsize="marquee"
                    />

                <ImageView
                    android:id="@+id/teacher_add_photo_img_id"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/add_circle" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/teacher_password_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Write here..."
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/teacher_confirm_password_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Write here..."
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="30dp"
                />
            <TextView
                android:id="@+id/teacher_passwordChecker_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password does not match"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:textColor="#C60101"
                android:gravity="center_horizontal"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/teacher_register_button_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/white"
                android:textColor="@color/textColorWhite"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style"
                />
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textSize="13sp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/teacher_navigate_to_sign_in_button_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/secondaryBackgroundColorGreen"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>