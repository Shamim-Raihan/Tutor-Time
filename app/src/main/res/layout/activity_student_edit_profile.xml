<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorGray"
    android:orientation="vertical"
    tools:context=".ui.activity.StudentEditProfileActivity">
    <ScrollView
        android:background="@drawable/layout_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        >
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Edit Profile"
                android:layout_marginBottom="50dp"
                android:textColor="@color/textColorWhite"
                android:textSize="25sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/student_edit_name_ed_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Write here..."
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="40dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/student_edit_phone_ed_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Write here..."
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="30dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <NumberPicker
                android:id="@+id/student_edit_class_picker_id"
                android:layout_width="200dp"
                android:layout_height="120dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <NumberPicker
                android:id="@+id/student_edit_age_picker_id"
                android:layout_width="200dp"
                android:layout_height="120dp"
                />

            <TextView
                android:id="@+id/student_passwordChecker_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password does not match"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:textColor="#C60101"
                android:gravity="center_horizontal"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/student_register_edit_btn_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/white"
                android:textColor="@color/textColorWhite"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>