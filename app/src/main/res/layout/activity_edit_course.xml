<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorGray"
    android:orientation="vertical"
    tools:context=".ui.activity.EditCourseActivity">
    <ScrollView
        android:background="@drawable/layout_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        >
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="New Course"
                android:layout_marginBottom="50dp"
                android:textColor="@color/textColorWhite"
                android:textSize="25sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/edit_course_name_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Write here..."
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="40dp"
                />

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    />

                <RadioGroup
                    android:id="@+id/edit_course_radio_group_id"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/edit_course_oneline_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        android:layout_marginRight="20dp"
                        />
                    <RadioButton
                        android:id="@+id/edit_course_offline_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offline"
                        />
                </RadioGroup>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                />
            <NumberPicker
                android:id="@+id/edit_course_class_picker_id"
                android:layout_width="200dp"
                android:layout_height="120dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                />
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_background_design"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="20dp"
                >

                <EditText
                    android:id="@+id/edit_course_start_time_id"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/edit_course_star_time_picker_id"
                    android:background="@drawable/edit_text_background_design"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/edit_course_star_time_picker_id"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/add_circle" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Time"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                />
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_background_design"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="30dp"
                >

                <EditText
                    android:id="@+id/edit_course_end_time_id"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/edit_course_end_time_picker_id"
                    android:background="@drawable/edit_text_background_design"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/edit_course_end_time_picker_id"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/add_circle" />
            </RelativeLayout>

            <TextView
                android:id="@+id/edit_course_loacation_address_tv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location/platform Address"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/edit_course_platform_link_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Paste platform link here..."
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="40dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seat number"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/edit_course_seat_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Number of seat"
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="40dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Fee"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/edit_course_fee_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Number of seat"
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_background_design"
                android:layout_marginBottom="40dp"
                />

            <Button
                android:id="@+id/edit_course_button_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Edit Course"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/white"
                android:textColor="@color/textColorWhite"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>