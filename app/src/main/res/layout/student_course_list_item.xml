<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:layout_margin="10dp"
    >
    <RelativeLayout
        android:background="@drawable/item_list_style"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerVertical="true"
            android:background="@drawable/title_circle_style"
            android:id="@+id/circle_title_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/course_titile_id"
                android:gravity="center"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="PH"
                android:textColor="@color/textColorBlack"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/circle_title_id"
            android:layout_alignParentRight="true"
            android:id="@+id/details_layout_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/student_course_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:textColor="@color/textColorBlack"
                android:textSize="20sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/student_class_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class"
                android:textSize="14sp"
                android:textColor="@color/textColorBlack"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>